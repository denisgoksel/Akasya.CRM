@model List<Akasya.CRM.Core.Entities.Order>

@{
    ViewData["Title"] = "Sipariş API Test";
}

<h2>Sipariş API Testi</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Sipariş No</th>
                <th>Tarih</th>
                <th>Müşteri ID</th>
                <th>Tutar</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
           
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        Sipariş bulunamadı veya API erişilemiyor.
    </div>
}
